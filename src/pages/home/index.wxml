<view class="skyline">
  <t-navbar title="首页"> </t-navbar>
  <scroll-view
    class="scroll-view"
    enhanced
    scroll-y="{{ true }}"
    show-scrollbar="{{ false }}"
    type="list"
  >
    <t-cell-group theme="card" style="margin-top: 16px">
      <t-cell
        leftIcon="centimeter"
        title="选择日期"
        hover
        note="{{ datePropPickerText }}"
        arrow
        bindtap="_showPicker"
        data-prop="datePropPicker"
      />
      <t-cell
        leftIcon="city-1"
        title="选择城市"
        hover
        note="{{ cityPropPickerText }}"
        arrow
        bindtap="_showPicker"
        data-prop="cityPropPicker"
      />
    </t-cell-group>
  </scroll-view>
</view>

<!-- 日期选择器 -->
<t-date-time-picker
  auto-close
  mode="date"
  title="选择日期"
  format="YYYY-MM-DD"
  data-prop="datePropPicker"
  value="{{ datePropPickerValue }}"
  visible="{{ datePropPickerVisible }}"
  default-value="{{ _DateTimePickerDefault }}"
  popup-props="{{ _DateTimePickerPopupProps }}"
  bind:change="_onConfirm"
  bind:cancel="_closePicker"
  bind:close="_closePicker"
/>

<!-- 选择城市 -->
<t-picker
  title="选择城市"
  cancelBtn="取消"
  confirmBtn="确认"
  using-custom-navbar
  data-prop="cityPropPicker"
  value="{{ cityPropPickerValue }}"
  visible="{{ cityPropPickerVisible }}"
  popup-props="{{ _PickerPopupProps }}"
  bind:change="_onConfirm"
  bind:cancel="_closePicker"
>
  <t-picker-item options="{{ cityOptions }}"></t-picker-item>
</t-picker>
